<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0C054B"
    android:orientation="vertical"
    tools:context=".MainActivity"
    style="@style/AppTheme">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:foreground="@drawable/captura1"></ImageView>
            <Button
                android:id="@+id/btnIngCliente"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Ingresar Cliente"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#140C37"
                android:background="@drawable/boton_redondeado">
            </Button>
            <Button
                android:id="@+id/btnVerClientes"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Ver  clientes"
                android:textSize="18dp"
                android:layout_marginTop="18dp"
                android:textStyle="bold"
                android:textColor="#140C37"
                android:background="@drawable/boton_redondeado">
            </Button>
            <Button
                android:id="@+id/btnAggSeccion"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Agregar secciÃ³n de productos"
                android:textSize="18dp"
                android:layout_marginTop="18dp"
                android:textStyle="bold"
                android:textColor="#140C37"
                android:background="@drawable/boton_redondeado">
            </Button>
            <Button
                android:id="@+id/btnAggProduct"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Agregar productos"
                android:textSize="18dp"
                android:layout_marginTop="18dp"
                android:textStyle="bold"
                android:textColor="#140C37"
                android:background="@drawable/boton_redondeado">
            </Button>
            <Button
                android:id="@+id/btnVerProductos"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_redondeado"
                android:text="Ver productos"
                android:textColor="#140C37"
                android:textSize="18dp"
                android:layout_marginTop="18dp"
                android:textStyle="bold">
            </Button>
            <Button
                android:id="@+id/btnAggEmple"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Agregar Empleado"
                android:textSize="18dp"
                android:layout_marginTop="18dp"
                android:textStyle="bold"
                android:textColor="#140C37"
                android:background="@drawable/boton_redondeado">
            </Button>
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="18dp"
                android:foreground="@drawable/captura2"
                android:id="@+id/btnImgSalir">
            </ImageButton>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>