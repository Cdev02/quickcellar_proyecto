<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/AppTheme"
    tools:context=".AgregarProductos">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Spinner
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginRight="50dp"
                android:id="@+id/spSecciones"></Spinner>
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Ingrese nombre del producto"
                android:textColorHint="#BB9009"
                android:textColor="#BB9009"
                android:layout_marginTop="25dp"
                android:id="@+id/txtNomProducto">
            </EditText>
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtReferenciaPr"
                android:hint="Ingrese referencia del producto"
                android:textColorHint="#BB9009"
                android:layout_marginTop="25dp"
                android:textColor="#BB9009">
            </EditText>
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtMarcaPr"
                android:hint="Ingrese marca del producto"
                android:textColorHint="#BB9009"
                android:layout_marginTop="25dp"
                android:textColor="#BB9009">
            </EditText>
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtDescripcionPr"
                android:hint="Ingrese descripciÃ³n del producto"
                android:textColorHint="#BB9009"
                android:layout_marginTop="25dp"
                android:textColor="#BB9009">
            </EditText>
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtPrecioPr"
                android:inputType="number"
                android:hint="Ingrese precio del producto"
                android:textColorHint="#BB9009"
                android:layout_marginTop="25dp"
                android:textColor="#BB9009">
            </EditText>
            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnAgregar"
                android:text="AGREGAR"
                android:layout_marginTop="40dp"
                android:background="@drawable/boton_redondeado"
                android:textColor="#140C37"
                android:textSize="20dp">
            </Button>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>