<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0C054B"
    tools:context=".perfilClienteActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/txtIdPer"
                android:layout_width="317dp"
                android:hint="IdentificaciÃ³n"
                android:layout_height="40dp"
                android:textColorHint="#BB9009"
                android:textColor="#BB9009"
                android:enabled="false"
                android:layout_marginTop="100dp"
                />

            <EditText
                android:id="@+id/txtNomPer"
                android:layout_width="317dp"
                android:enabled="false"
                android:layout_height="40dp"
                android:hint="Nombre"
                android:textColorHint="#BB9009"
                android:textColor="#BB9009"
                android:layout_marginTop="30dp"
                 />

            <EditText
                android:id="@+id/txtEmailPer"
                android:layout_width="317dp"
                android:layout_height="40dp"
                android:hint="Correo"
                android:textColorHint="#BB9009"
                android:enabled="false"
                android:textColor="#BB9009"
                android:layout_marginTop="30dp"
                 />

            <EditText
                android:id="@+id/txtTotalcomp"
                android:layout_width="317dp"
                android:layout_height="40dp"
                android:hint="Total compras"
                android:enabled="false"
                android:textColorHint="#BB9009"
                android:textColor="#BB9009"

                android:layout_marginTop="30dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">

                <Button
                    android:id="@+id/btnActualizarDatosCliente"
                    android:layout_width="116dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/boton_redondeado"
                    android:textColor="#140C37"

                    android:text="Actualizar" />

                <Button
                    android:id="@+id/btnComprarProductos"
                    android:layout_width="107dp"
                    android:layout_height="41dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/boton_redondeado"
                    android:textColor="#140C37"
                    android:text="Comprar" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>